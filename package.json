{
  "name": "micro-frontend-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:shell\" \"npm run dev:products\" \"npm run dev:users\"",
    "dev:shared": "cd packages/shared && npm run dev",
    "dev:shell": "cd apps/shell && npm run dev",
    "dev:products": "cd apps/product-management && npm run dev",
    "dev:users": "cd apps/user-management && npm run dev",
    "build": "npm run build:shared && npm run build:products && npm run build:users && npm run build:shell",
    "build:shared": "cd packages/shared && npm run build",
    "build:shell": "cd apps/shell && npm run build",
    "build:products": "cd apps/product-management && npm run build",
    "build:users": "cd apps/user-management && npm run build",
    "install:all": "npm install && npm run install:shared && npm run install:shell && npm run install:products && npm run install:users",
    "install:shared": "cd packages/shared && npm install",
    "install:shell": "cd apps/shell && npm install",
    "install:products": "cd apps/product-management && npm install",
    "install:users": "cd apps/user-management && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}